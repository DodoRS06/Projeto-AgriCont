<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriCont</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriCont.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="color: #EDEBEB;font-family:'Inter', sans-serif;font-style: normal;font-weight: 700;font-size: 25px;line-height: 32px; margin-left:10px; margin-top:5px; margin-bottom:5px" asp-area="" asp-controller="Home" asp-action="Index">AgriCont</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color: #EDEBEB;font-family:'Inter', sans-serif;font-style: normal;font-weight: 400;font-size: 16px;margin-left:50px;margin-right:10px" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #EDEBEB;font-family:'Inter', sans-serif;font-style: normal;font-weight: 400;font-size: 16px;margin-left:10px;margin-right:10px" asp-area="" asp-controller="Empresas" asp-action="Index">Cadastro Empresas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #EDEBEB;font-family:'Inter', sans-serif;font-style: normal;font-weight: 400;font-size: 16px;margin-left:10px;margin-right:10px" asp-area="" asp-controller="Usuarios" asp-action="Index">Cadastro Usuário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #EDEBEB;font-family:'Inter', sans-serif;font-style: normal;font-weight: 400;font-size: 16px;margin-left:10px;margin-right:10px" asp-area="" asp-controller="Informaticas" asp-action="Index">Cadastrar  Item Informática</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #EDEBEB;font-family:'Inter', sans-serif;font-style: normal;font-weight: 400;font-size: 16px;margin-left:10px;margin-right:10px" asp-area="" asp-controller="Ferramentas" asp-action="Index">Cadastrar  Item Ferramentas</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                Olá,@User.Identity.Name <a class="nav-link" style="color: #EDEBEB;" asp-area="" asp-controller="Usuarios" asp-action="Logout">Sair</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color: #EDEBEB;" asp-area="" asp-controller="Usuarios" asp-action="Login"><img src="Images/loginB.png" id="login" style="height:20px; margin:5px; text-align:right"></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div style="text-align:center; margin-bottom:5px; margin-top:5px">
                <a href="http://youtube.com.br"><img src="Images/youtubeB.png" id="youtube" style="height:20px; margin:5px"></a>
                <a href="http://instagram.com.br"><img src="Images/instagramB.png" id="insta" style="height:20px; margin:5px"></a>
                <a href="http://facebook.com.br"><img src="Images/facebookB.png" id="face" style="height:20px; margin:5px"></a>
                <a href="http://whatsapp.com.br"><img src="Images/whatsappB.png" id="whatsapp" style="height:20px; margin:5px"></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


@model IEnumerable<AgriCont.Models.Empresa>

@{
    ViewData["Title"] = "Empresa";
}
<div class="container" style="padding-top:30px">
<h2>Cadastro de Empresa</h2>
<br />
    @if (User.Identity.IsAuthenticated)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RazaoSocial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeFantasia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cnpj)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RazaoSocial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeFantasia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cnpj)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id"><img src="~/Images/Details.png" id="Details" style="height:20px; margin:5px"></a>

                            @if (User.IsInRole("Admin"))
                            {
                                   
                                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/Images/Edit.png" id="Edit" style="height:20px; margin-right:10px"></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/Images/Excluir.png" id="Delete" style="height:20px; margin:5px"></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
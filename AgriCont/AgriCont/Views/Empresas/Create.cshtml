@model AgriCont.Models.Empresa

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <br />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (ViewBag.Id == null)
    { 
    <h4>Dados da Empresa</h4>
    <hr />
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="RazaoSocial" class="control-label"></label>
            <input asp-for="RazaoSocial" class="form-control" placeholder="Digite a Razão Social" />
            <span asp-validation-for="RazaoSocial" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="NomeFantasia" class="control-label"></label>
            <input asp-for="NomeFantasia" class="form-control" placeholder="Digite o Nome Fantasia" />
            <span asp-validation-for="NomeFantasia" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Cnpj" class="control-label"></label>
            <input asp-for="Cnpj" class="form-control" placeholder="00.000.000/0000-00" />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" placeholder="exampla@example.com.br" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" placeholder="00-0000-0000" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </div>
    <br />
    <h4>Endereço</h4>
    <hr />
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="Logradouro" class="control-label"></label>
            <input asp-for="Logradouro" class="form-control" placeholder=" Digite o nome da Rua/Avenida" />
            <span asp-validation-for="Logradouro" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control" placeholder="Digite o número do imóvel" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Complemento" class="control-label"></label>
            <input asp-for="Complemento" class="form-control" placeholder=" Digite complemento do endereço " />
            <span asp-validation-for="Complemento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Cep" class="control-label"></label>
            <input asp-for="Cep" class="form-control" placeholder="00000-000" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
        </div>

        <br />
        <div class="form-group">
        <input type="submit" value="Salvar" class="btn" style=" background-color: #494949; color: #EDEBEB" />
        <a asp-controller="Home" asp-action="Index" class="btn" style=" background-color: #494949; color: #EDEBEB">Voltar</a>
        </div>
    }
    else
    {
        <div class="text-center">
            <h5 style="text-align:center; color: #189D70;"> Seu Código de Empresa foi gerado com sucesso!!!</h5>
            <br>
            <h5> @ViewBag.Id </h5>
            <br>
            <h6> Por favor, retornar e finalizar Cadastro de Usuário!!</h6>
            <br>
            <a type=" button" class="btn" style="background-color:#494949;color:#EDEBEB" asp-controller="Usuarios" asp-action="Create">OK</a>
        </div>


    }
</form>
</div>
    
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
   
@model AgriCont.Models.EditPasswordModel

@{
ViewData["Title"] = "Refinir Senha";
}

@if (TempData["MensagemErro"] != null)
{
<div class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["MensagemErro"]
</div>
}

@if (TempData["MensagemSucesso"] != null)
{
<div class="alert alert-sucess" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["MensagemSucesso"]
</div>
}

<div class="container-fluid" style="padding-top:30px">
<h1 class="text-center" style="color:#189D70;">Redefinir senha</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="RedefinirSenha">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaId" class="control-label"></label>
                <input asp-for="EmpresaId" class="form-control" />
                <span asp-validation-for="EmpresaId" class="text-danger"></span></br>
            </div>

            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Redefinir" class="btn" style="background-color:#494949;color:#EDEBEB;" />
                    <a class="btn" style="background-color:#494949; color:#EDEBEB;" asp-controller="Usuarios" asp-action="Login">Voltar</a>
                </div>
            </div>
        </form>
        <h3 style="text-align:center;"> @ViewBag.Message </h3>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</div>
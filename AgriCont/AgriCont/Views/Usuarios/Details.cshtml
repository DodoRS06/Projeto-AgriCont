@model AgriCont.Models.Usuario

@{
    ViewData["Title"] = "Details";
}
<div class="container">
<br />
<h1>Detalhes de Usuário</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa!.Cnpj)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
</div>
<div>
        <a asp-action="Edit" class="btn" style=" background-color: #494949; color: #EDEBEB;" asp-route-id="@Model?.Id">Editar</a> 
        <a asp-action="Index" class="btn" style=" background-color: #494949; color: #EDEBEB;">Voltar</a>
</div>
</div>
@model IEnumerable<AgriCont.Models.Usuario>

@{
    ViewData["Title"] = "Usuário";
}
<div class="container" style="padding-top:30px">
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (User.Identity.IsAuthenticated)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpresaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Perfil)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                   // @if (User.Identity.Name.ToString() == item.Nome.ToString())
                    
                        <tr>
                            <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpresaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Perfil)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                            }
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
        }
   </div>
    

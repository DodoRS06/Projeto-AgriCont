
@{
    ViewData["Title"] = "FaleConosco";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form >
                <br />
                <h2 style=" color: #189D70;" class="text-center">Fale Conosco</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                <div class="form-group">
                    <label for="exampleFormControlInput1">Nome Completo*</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Digite o seu nome completo">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Endereço de email*</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="nome@exemplo.com">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Telefone*</label>
                    <input type="tel" class="form-control" id="exampleFormControlInput1" placeholder="00-0000-0000">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Digite sua mensagem</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                </div>
                <br />
                <div class="row btn-toolbar justify-content-center" role="toolbar" aria-label="Toolbar com grupos de botões">
                    <div class="btn-group mr-2 col-md-4" role="group" aria-label="Primeiro grupo">
                        <input type="submit" value="Enviar" class="btn" style=" background-color: #494949; color: #EDEBEB;" />
                    </div>
                    <div class="btn-group mr-2  col-md-4" role="group" aria-label="Segundo grupo">
                        <a type="button" class="btn" style=" background-color: #494949; color: #EDEBEB;" asp-controller="Home" asp-action="Index">Voltar</a>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }



